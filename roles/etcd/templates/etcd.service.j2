[Unit]
Description=etcd
Documentation=https://github.com/coreos

[Service]
ExecStart=/usr/local/bin/etcd \
  --name {{ inventory_hostname }} \
  --cert-file={{ host_files["etcdserver-cert"].dst }} \
  --key-file={{ host_files["etcdserver-key"].dst }} \
  --peer-cert-file={{ host_files["etcdserver-peer-cert"].dst }} \
  --peer-key-file={{ host_files["etcdserver-peer-key"].dst }} \
  --trusted-ca-file={{ cluster_files["etcdca-cert"].dst }} \
  --peer-trusted-ca-file={{ cluster_files["etcdca-cert"].dst }} \
  --peer-client-cert-auth \
  --client-cert-auth \
  --initial-advertise-peer-urls https://{{ ansible_host }}:2380 \
  --listen-peer-urls https://{{ ansible_host }}:2380 \
  --listen-client-urls https://{{ ansible_host }}:2379,https://127.0.0.1:2379 \
  --advertise-client-urls https://{{ ansible_host }}:2379 \
  --initial-cluster-token etcd-cluster-0 \
  --initial-cluster {% for host in groups['ETCD'] -%} {{ host }}=https://{{ hostvars[host]['ansible_host'] }}:2380 {%- if not loop.last %},{% endif -%} {%- endfor %} \
  --initial-cluster-state new \
  --data-dir={{ dirs.data_dir }}
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target

