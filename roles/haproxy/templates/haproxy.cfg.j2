frontend kubernetes
    bind {{ ansible_host }}:{{ kube_apiserver_port }}
    option tcplog
    mode tcp
    default_backend kubernetes-master-nodes

backend kubernetes-master-nodes
    mode tcp
    balance roundrobin
    option tcp-check
    {% for host in groups['KUBE_APISERVER'] %}
server {{ host }} {{ hostvars[host]['ansible_host'] }}:{{ kube_apiserver_port }} check fall 3 rise 2
    {% endfor %}
