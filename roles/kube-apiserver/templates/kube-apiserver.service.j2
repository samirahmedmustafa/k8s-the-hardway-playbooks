[Unit]
Description=Kubernetes API Server
Documentation=https://github.com/kubernetes/kubernetes

[Service]
ExecStart=/usr/local/bin/kube-apiserver \
  --advertise-address={{ ansible_host }} \
  --allow-privileged=true \
  --apiserver-count=3 \
  --audit-log-maxage=30 \
  --audit-log-maxbackup=3 \
  --audit-log-maxsize=100 \
  --audit-log-path=/var/log/audit.log \
  --authorization-mode=Node,RBAC \
  --bind-address=0.0.0.0 \
  --enable-admission-plugins=NodeRestriction,ServiceAccount \
  --enable-bootstrap-token-auth  \
  --etcd-cafile={{ etcd["etcdca-cert"].dst }} \
  --etcd-certfile={{ host_files["etcdserver-cert"].dst }} \
  --etcd-keyfile={{ host_files["etcdserver-key"].dst }} \
  --etcd-servers={% for host in groups['ETCD'] -%} https://{{ hostvars[host]['ansible_host'] }}:2379 {%- if not loop.last %},{% endif -%} {%- endfor %} \
  --event-ttl=1h \
  --encryption-provider-config={{ cluster_files["encryption-provider-config"].dst }} \
  --kubelet-certificate-authority={{ cluster_files["ca-cert"].dst }} \
  --kubelet-client-certificate={{ cluster_files["kube-apiserver-cert"].dst }} \
  --kubelet-client-key={{ cluster_files["kube-apiserver-key"].dst }} \
  --runtime-config=api/all=true \
  --service-account-issuer=https://{{ ansible_host }}:6443 \
  --service-account-signing-key-file={{ serviceaccount["service-account-key"].dst }} \
  --service-account-key-file={{ serviceaccount["service-account-cert"].dst }} \
  --service-cluster-ip-range={{ params["service-cluster-ip-range"] }} \
  --service-node-port-range=30000-32767 \
  --client-ca-file={{ cluster_files["ca-cert"].dst }} \
  --tls-cert-file={{ cluster_files["kube-apiserver-cert"].dst }} \
  --tls-private-key-file={{ cluster_files["kube-apiserver-key"].dst }} \
  --v=2
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
